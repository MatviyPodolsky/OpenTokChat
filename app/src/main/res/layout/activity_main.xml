        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:id="@+id/layout_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_line"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_buttons"
            android:layout_width="match_parent"
            android:layout_height="@dimen/controls_layout_height"
            android:background="@color/dark_grey"
            android:paddingBottom="@dimen/control_layout_padding"
            android:paddingTop="@dimen/control_layout_padding"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_controls"
                android:layout_width="match_parent"
                android:layout_height="@dimen/controls_height"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_mute"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/controls_padding">

                    <com.way.mat.opentokchat.views.MeterView
                        android:id="@+id/img_mute"
                        android:layout_width="@dimen/controls_height"
                        android:layout_height="@dimen/controls_height"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_hold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/controls_padding">

                    <com.way.mat.opentokchat.views.SquareImageView
                        android:id="@+id/img_hold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_view_selector" />

