    <RelativeLayout
        android:id="@+id/rl_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img_call"
        android:layout_below="@+id/divider"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/main_text_margin"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_description" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_centerHorizontal="true"
            android:text="@string/experience_title"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"
            android:visibility="gone"/>

    </RelativeLayout>

    <com.way.mat.opentokchat.views.SquareImageView
        android:id="@+id/img_call"
        android:layout_width="@dimen/call_button_size"
        android:layout_height="@dimen/call_button_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/camera_bot_margin"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_large_start_watching" />

    <TextView
        android:id="@+id/tv_start_watching"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:text="@string/start_watching"
        android:textColor="@color/black" />

