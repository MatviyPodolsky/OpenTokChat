<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/popup_width"
    android:layout_height="@dimen/popup_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text"
        android:layout_toLeftOf="@+id/img_popup"
        android:gravity="center_vertical|left"
        android:textSize="@dimen/text_popup"
        android:textColor="@color/popup_text"
        android:paddingLeft="@dimen/popup_side_margin"
        android:layout_width="0dp"
        android:layout_height="@dimen/popup_height"
        android:layout_weight="1"/>

    <com.way.mat.skyq.views.SquareImageView
        android:id="@+id/img_popup"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/popup_side_margin"
        android:layout_marginLeft="@dimen/popup_side_margin"
        android:layout_marginTop="@dimen/popup_top_margin"
        android:layout_marginBottom="@dimen/popup_top_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>